@model Hastane.ViewModel.HastaViewModel
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hasta Profili</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/hasta.css">
</head>
<body>

    @{
        ViewData["Title"] = "Hasta Profili";
    }

    <div class="container">
        @if (Model.Hasta.Any())
        {
            var hasta = Model.Hasta.FirstOrDefault();
            <h3>@hasta?.HastaAd @hasta?.HastaSoyad</h3>
        }

        <div>
            <h4>Kişisel Bilgiler</h4>
            @foreach (var hasta in Model.Hasta)
            {
                <p>TC: @hasta.TcKimlikNo</p>
                <p>Telefon: @hasta.Telefon</p>
                <p>Email: @hasta.Email</p>
            }
        </div>

        <div>
            <h4>Bekleyen Randevular</h4>
            <ul>
                @foreach (var randevu in Model.BekleyenRandevular)
                {
                    <li>
                        Doktor: @randevu.Doktor.DoktorAd @randevu.Doktor.DoktorSoyad -
                        Tarih: @randevu.RandevuTarihi.ToShortDateString()
                        Saat: @randevu.RandevuSaati.ToString(@"hh\:mm")

                        <form method="post" action="/Hasta/RandevuSil">
                            <input type="hidden" name="randevuid" value="@randevu.RandevuId" />
                            <button type="submit" class="btn btn-danger">İptal Et</button>
                        </form>
                    </li>
                }

            </ul>
        </div>
        @if (TempData["RMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["RMessage"]
            </div>
        }

        @if (TempData["RErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                @TempData["RErrorMessage"]
            </div>
        }
        <div>
            <h4>Geçmiş Randevular</h4>
            <ul>
                @foreach (var randevu in Model.GecmisRandevular)
                {
                    <li>
                        Doktor: @randevu.Doktor.DoktorAd @randevu.Doktor.DoktorSoyad -
                        Tarih: @randevu.RandevuTarihi.ToShortDateString()
                        Saat: @randevu.RandevuSaati.ToString(@"hh\:mm")
                    </li>
                }
            </ul>
        </div>
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
        }
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success">
                @TempData["Message"]
            </div>
        }

        @if (TempData["SuccessMessage"] != null)
        {
            <script>
                alert('@TempData["SuccessMessage"]');
            </script>
        }

        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#SifreDegistirModal">Şifre Değiştir</button>

        <!-- Şifre değiştirme modalı -->
        <div class="modal fade" id="SifreDegistirModal" tabindex="-1" aria-labelledby="SifreDegistirModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="SifreDegistirModalLabel">Şifre Değiştir</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form method="post" action="/Hasta/SifreDegistir">
                            <input type="hidden" name="HastaId" value="@Model.Hasta.First().HastaId" />
                            <div class="mb-3">
                                <label for="currentPassword" class="form-label">Mevcut Şifre</label>
                                <input type="password" class="form-control" id="currentPassword" name="currentPassword" required>
                            </div>
                            <div class="mb-3">
                                <label for="newPassword" class="form-label">Yeni Şifre</label>
                                <input type="password" class="form-control" id="newPassword" name="newPassword" required>
                            </div>
                            <button type="submit" class="btn btn-primary">Şifreyi Değiştir</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Randevu Alma Modalı -->
        <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#RandevuAlModal">Randevu Al</button>

        <div class="modal fade" id="RandevuAlModal" tabindex="-1" aria-labelledby="RandevuAlModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="RandevuAlModalLabel">Randevu Al</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form method="post" action="/Hasta/RandevuAl">
                            <div class="mb-3">
                                <label for="BransId" class="form-label">Branş Seçin</label>
                                <select class="form-select" id="BransId" name="BransId" required>
                                    <option value="">Branş Seçin</option>
                                    @foreach (var brans in Model.Brans)
                                    {
                                        <option value="@brans.BransId">@brans.BransAd</option>
                                    }
                                </select>
                            </div>

                            <div class="mb-3">
                                <label for="DoktorId" class="form-label">Doktor Seçin</label>
                                <select class="form-select" id="DoktorId" name="DoktorId" required>
                                    <option value="">Önce Branş Seçin</option>
                                </select>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Tarih</label>
                                <select class="form-select" id="RandevuTarihi" name="RandevuTarihi" required>
                                    <option value="">Tarih Seçin</option>
                                </select>
                            </div>

                            <div class="mb-3" id="saatSecimi" style="display: none;">
                                <label class="form-label">Saat</label>
                                <div id="saatListesi"></div>
                            </div>

                            <button type="submit" class="btn btn-primary">Randevu Al</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script>
            $('#BransId').change(function () {
                var bransId = $(this).val();
                $.ajax({
                    url: '/Hasta/DoktorGetir',
                    type: 'GET',
                    data: { bransId: bransId },
                    success: function (data) {
                        $('#DoktorId').empty().append('<option value="">Doktor Seçin</option>');
                        $.each(data, function (index, doktor) {
                            $('#DoktorId').append('<option value="' + doktor.doktorId + '">' + doktor.doktorAd + ' ' + doktor.doktorSoyad + '</option>');
                        });
                    },
                    error: function (xhr, status, error) {
                        console.error("AJAX Error: ", status, error);
                    }
                });
            });

            $('#DoktorId').change(function () {
                var doktorId = $(this).val();
                if (doktorId) {
                    $.ajax({
                        url: '/Hasta/MusaitTarihVeSaatler',
                        type: 'GET',
                        data: { doktorId: doktorId },
                        success: function (data) {
                            $('#RandevuTarihi').empty().append('<option value="">Tarih Seçin</option>');
                            $.each(data.tarihler, function (index, tarih) {
                                var sadeceTarih = tarih.split(' ')[0]; // This gets the date part
                                $('#RandevuTarihi').append('<option value="' + sadeceTarih + '">' + sadeceTarih + '</option>');
                            });

                        },
                        error: function (xhr, status, error) {
                            console.error("AJAX Error: ", status, error);
                        }
                    });
                } else {
                    $('#RandevuTarihi').empty().append('<option value="">Önce Doktor Seçin</option>');
                }
            });

            $('#RandevuTarihi').change(function () {
                var tarih = $(this).val(); // Tarih formatı uygun mu kontrol edin
                var doktorId = $('#DoktorId').val();
                if (tarih && doktorId) {
                    $.ajax({
                        url: '/Hasta/MusaitTarihVeSaatler',
                        type: 'GET',
                        data: { tarih: tarih, doktorId: doktorId },
                        success: function (data) {
                            $('#saatListesi').empty();
                            if (data.saatler[tarih] && data.saatler[tarih].length > 0) {
                                $('#saatSecimi').show();
                                $.each(data.saatler[tarih], function (index, saat) {
                                    $('#saatListesi').append('<div class="form-check"><input class="form-check-input" type="radio" name="RandevuSaati" value="' + saat + '" id="saat' + index + '"><label class="form-check-label" for="saat' + index + '">' + saat + '</label></div>');
                                });
                            } else {
                                $('#saatSecimi').hide();
                                alert('Seçilen tarihte uygun saat yok.');
                            }
                        },
                        error: function (xhr, status, error) {
                            console.error("AJAX Error: ", status, error);
                            console.error(xhr.responseText); // Sunucudan dönen hata mesajı
                            alert('Bir hata oluştu. Lütfen daha sonra tekrar deneyin.');
                        }
                    });
                } else {
                    $('#saatSecimi').hide();
                }
            });

        </script>
        <!-- Bootstrap JS (ve jQuery) -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    </div>
</body>
</html>
