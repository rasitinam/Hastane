@model Hastane.ViewModel.LoginViewModel
@{
    ViewData["Title"] = "Home page";
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hastane Giriş</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/site.css"> <!-- CSS dosyasını buradan ekliyoruz -->
</head>
<body>

    <div class="background-image"></div> <!-- Arka plan resmi için bir div -->

    <div class="login-container">
        <div class="form-section">
            <div class="login-header">
                <h2>Hastane Giriş</h2>
            </div>
            <form action="/Login/Submit" method="post">
                <div class="mb-3">
                    <label for="tc" class="form-label">TC KİMLİK NUMARASI</label>
                    <input type="number" class="form-control" id="tc" name="tc" placeholder="TC KİMLİK NUMARANIZI GİRİNİZ" required>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Şifre</label>
                    <input type="password" class="form-control" id="password" name="password" placeholder="Şifrenizi girin" required>
                </div>
                <div class="mb-3">
                    <label for="role" class="form-label">Rol Seçimi</label>
                    <select class="form-control" id="role" name="role" required>
                        <option value="hasta">Hasta</option>
                        <option value="doktor">Doktor</option>
                        <option value="sekreter">Sekreter</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-custom">Giriş Yap</button>
                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
           {
    <div class="alert alert-danger">
        @Model.ErrorMessage
    </div>
}

            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
